{
  "name": "@passageidentity/webauthnutils",
  "version": "1.2.0",
  "description": "A utility library to help with UX decisions around WebAuthn.",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": "^18 || ^20 || ^21"
  },
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc --noEmit & tsup ./src/index.ts --no-config  --sourcemap --format esm,cjs --dts --minify",
    "build:watch": "tsc --noEmit & tsup ./src/index.ts --watch --no-config --format esm,cjs --dts --minify",
    "commit:pre": "npm run lint:staged",
    "delete-maps": "npm run delete-map-files && npm run delete-references-to-map-files",
    "delete-map-files": "find ./dist -name '*.map' -delete",
    "delete-references-to-map-files": "npm run delete-references-to-map-files:js && npm run delete-references-to-map-files:mjs && npm run delete-references-to-map-files:cjs",
    "delete-references-to-map-files:js": "find ./dist -name '*.js' -exec sed -i -e 's/sourceMappingURL=[^ ]*.map//g' {} +",
    "delete-references-to-map-files:mjs": "find ./dist -name '*.mjs' -exec sed -i -e 's/sourceMappingURL=[^ ]*.map//g' {} +",
    "delete-references-to-map-files:cjs": "find ./dist -name '*.cjs' -exec sed -i  -e 's/ sourceMappingURL=[^ ]*.map//g' {} +",
    "format": "pretty-quick --staged",
    "lint": "eslint 'src/**/*.ts?(x)'",
    "lint:fix": "eslint 'src/**/*.ts?(x)' --fix",
    "lint:staged": "npx lint-staged",
    "log:env": "echo Using MODE: $MODE && echo Using APP_ENV: $APP_ENV"
  },
  "author": "Passage Identity, Inc.",
  "license": "ISC",
  "devDependencies": {
    "@types/ua-parser-js": "^0.7.36",
    "eslint-config-passage": "*",
    "passage-js-shared": "*",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "ua-parser-js": "^1.0.34"
  }
}
